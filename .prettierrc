{
  "printWidth": 100,
  "trailingComma": "all",
  "tabWidth": 4,
  "singleQuote": true,
  "arrowParens": "always",
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": ".*rc",
      "options": {
        "printWidth": 60,
        "tabWidth": 2
      }
    },
    {
      "files": "*.scss",
      "options": {
        "tabWidth": 2,
        "singleQuote": false
      }
    }
  ]
}
